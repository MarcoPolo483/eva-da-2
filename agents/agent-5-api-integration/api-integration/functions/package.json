{
  "name": "eva-da-2-functions",
  "version": "1.0.0",
  "description": "EVA DA 2.0 Azure Functions - Enterprise Chat API with Multi-Agent Orchestration",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "prestart": "npm run build",
    "start": "func start --port 7071",
    "start:debug": "func start --port 7071 --verbose",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write '**/*.{ts,js,json,md}'",
    "clean": "if exist dist rmdir /S /Q dist",
    "deploy:dev": "func azure functionapp publish eva-da-2-functions-dev",
    "deploy:staging": "func azure functionapp publish eva-da-2-functions-staging",
    "deploy:prod": "func azure functionapp publish eva-da-2-functions-prod",
    "validate": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/functions": "^4.9.0",
    "@azure/identity": "^4.0.1",
    "@azure/keyvault-secrets": "^4.7.0",
    "@azure/monitor-opentelemetry": "^1.2.0",
    "@azure/openai": "^1.0.0-beta.12",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/eva-da-2"
  },
  "keywords": [
    "azure-functions",
    "enterprise",
    "ai",
    "chat",
    "government",
    "multi-agent",
    "cosmos-db",
    "openai"
  ],
  "author": "EVA DA 2.0 Team",
  "license": "MIT"
}
